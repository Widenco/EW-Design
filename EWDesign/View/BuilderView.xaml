<Window
    x:Class="EWDesign.View.BuilderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EWDesign.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:EWDesign.ViewModel"
    Title="BuilderView"
    Width="920"
    Height="600"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModel:BuilderViewModel/>
    </Window.DataContext>
    <Border Background="#121A21" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="22"
                Foreground="White"
                Text="Components" />

            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="30"
                Foreground="White"
                Text="Start Building Your WebPage" />

            <TextBlock
                Grid.Column="2"
                Margin="0,0,10,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Text="No Component Selected" />

            <ScrollViewer Grid.Row="1">
                <ListBox ItemsSource="{Binding Components}"
                         SelectedItem="{Binding SelectedComponent}"
                         PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                         Background="#121A21"
                         Foreground="White"
                         FontSize="24"
                         Margin="0,15,0,0"
                         HorizontalAlignment="Center"
                         BorderThickness="0"/>
            </ScrollViewer>

            <Border
                Grid.Row="1"
                Grid.Column="1"
                Margin="10"
                BorderBrush="#243647"
                BorderThickness="1"
                >
                <StackPanel AllowDrop="True"
                            Name="DropArea"
                            Drop="DropArea_Drop"
                            Background="Transparent"/>
            </Border>


        </Grid>

    </Border>
</Window>
