<Window
    x:Class="EWDesign.View.BuilderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EWDesign.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:EWDesign.ViewModel"
    Title="BuilderView"
    Width="920"
    Height="600"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModel:BuilderViewModel />
    </Window.DataContext>
    <Border Background="#121A21" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="22"
                Foreground="White"
                Text="Components" />

            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="30"
                Foreground="White"
                Text="Start Building Your WebPage" />

            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding GroupedComponents}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Header="{Binding Key}" Foreground="White" IsExpanded="True">
                                <ItemsControl ItemsSource="{Binding}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                    Padding="8"
                                    Margin="5"
                                    Background="#1E2A36"
                                    CornerRadius="8"
                                    MouseLeftButtonDown="ComponentItem_MouseLeftButtonDown"
                                    Cursor="Hand">
                                                <TextBlock Text="{Binding DisplayName}" Foreground="White" />
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Border
                Grid.Row="1"
                Grid.Column="1"
                Margin="10"
                BorderBrush="#243647"
                BorderThickness="1">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel
                        Name="DropArea"
                        AllowDrop="True"
                        Background="Transparent"
                        Drop="DropArea_Drop" />
                </ScrollViewer>

            </Border>


        </Grid>

    </Border>
</Window>
