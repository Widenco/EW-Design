<UserControl
    x:Class="EWDesign.View.NewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EWDesign.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:EWDesign.ViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#243647"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewModel:NewViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock
            Margin="20,20,0,0"
            FontSize="30"
            Foreground="White"
            Text="NEW" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10" Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Icons}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Background="Transparent" Command="{Binding Command}" ToolTip="{Binding ToolTip}" Margin="30,0,0,0">
                            <Image Source="{Binding IconPath}" Width="150" Height="100" Stretch="Uniform"/>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>



    </Grid>
</UserControl>
