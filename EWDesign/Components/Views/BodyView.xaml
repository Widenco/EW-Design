<UserControl
    x:Class="EWDesign.Components.Views.BodyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EWDesign.Components.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:EWDesign.Components.Models"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{Binding BodyBackgroundColor}"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <models:BodyComponent />
    </UserControl.DataContext>

    <UserControl.Resources>
        <DropShadowEffect
            x:Key="ShadowEffect"
            BlurRadius="10"
            Opacity="0.2"
            ShadowDepth="2"
            Color="Black" />
    </UserControl.Resources>


    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel
            MaxWidth="1200"
            Margin="24,72,24,24"
            HorizontalAlignment="Center">

            <!--  Hero Section  -->
            <StackPanel
                Width="800"
                Margin="0,0,0,96"
                HorizontalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,24"
                    FontSize="48"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding HeroSectionText[0]}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <TextBlock
                    Margin="0,0,0,40"
                    FontSize="20"
                    Foreground="#DADADA"
                    Text="{Binding HeroSectionText[1]}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <Button
                    Width="200"
                    Padding="14,8"
                    HorizontalAlignment="Center"
                    Background="#6C63FF"
                    BorderBrush="{x:Null}"
                    Content="{Binding HeroSectionText[2]}"
                    Cursor="Hand"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#6C63FF" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#837EFF" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!--  Features Section  -->
            <WrapPanel
                Margin="0,0,0,24"
                HorizontalAlignment="Center"
                ItemHeight="Auto"
                ItemWidth="300">
                <!--  Feature 1  -->
                <Border
                    Width="300"
                    Margin="12"
                    Padding="32"
                    Background="{Binding FeatureBackgroundColor}"
                    CornerRadius="16"
                    Effect="{DynamicResource ShadowEffect}">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,12"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="{Binding FeatureSectionText[0]}" />
                        <TextBlock
                            FontSize="16"
                            Foreground="#DADADA"
                            Text="{Binding FeatureSectionText[1]}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <!--  Feature 2  -->
                <Border
                    Width="300"
                    Margin="12"
                    Padding="32"
                    Background="{Binding FeatureBackgroundColor}"
                    CornerRadius="16"
                    Effect="{DynamicResource ShadowEffect}">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,12"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="{Binding FeatureSectionText[2]}" />
                        <TextBlock
                            FontSize="16"
                            Foreground="#DADADA"
                            Text="{Binding FeatureSectionText[3]}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <!--  Feature 3  -->
                <Border
                    Width="300"
                    Margin="12"
                    Padding="32"
                    Background="{Binding FeatureBackgroundColor}"
                    CornerRadius="16"
                    Effect="{DynamicResource ShadowEffect}">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,12"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="{Binding FeatureSectionText[4]}" />
                        <TextBlock
                            FontSize="16"
                            Foreground="#DADADA"
                            Text="{Binding FeatureSectionText[5]}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </WrapPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
