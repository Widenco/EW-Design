<UserControl x:Class="EWDesign.Components.Views.BodyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EWDesign.Components.Views"
             xmlns:models="clr-namespace:EWDesign.Components.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{Binding BodyBackgroundColor}">

    <UserControl.DataContext>
        <models:BodyComponent />
    </UserControl.DataContext>

    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect"
                      BlurRadius="10"
                      ShadowDepth="2"
                      Color="Black"
                      Opacity="0.2"/>
    </UserControl.Resources>


    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24,72,24,24"
                    HorizontalAlignment="Center"
                    MaxWidth="1200">

            <!-- Hero Section -->
            <StackPanel Margin="0,0,0,96" HorizontalAlignment="Center" Width="800">
                <TextBlock Text="{Binding HeroSectionText[0]}"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="White"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,24"/>

                <TextBlock Text="{Binding HeroSectionText[1]}"
                           FontSize="20"
                           Foreground="#DADADA"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,40"/>

                <Button Content="{Binding HeroSectionText[2]}"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Padding="14,8"
                        Width="200"
                        Background="#6C63FF"
                        Foreground="White"
                        BorderBrush="{x:Null}"
                        HorizontalAlignment="Center"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#6C63FF"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#837EFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Features Section -->
            <WrapPanel Margin="0,0,0,24" HorizontalAlignment="Center" ItemWidth="300" ItemHeight="Auto">
                <!-- Feature 1 -->
                <Border Background="{Binding FeatureBackgroundColor}"
                        CornerRadius="16"
                        Padding="32"
                        Width="300"
                        Margin="12"
                        Effect="{DynamicResource ShadowEffect}">
                    <StackPanel>
                        <TextBlock Text="{Binding FeatureSectionText[0]}"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding FeatureSectionText[1]}"
                                   FontSize="16"
                                   Foreground="#DADADA"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Feature 2 -->
                <Border Background="{Binding FeatureBackgroundColor}"
                        CornerRadius="16"
                        Padding="32"
                        Width="300"
                        Margin="12"
                        Effect="{DynamicResource ShadowEffect}">
                    <StackPanel>
                        <TextBlock Text="{Binding FeatureSectionText[2]}"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding FeatureSectionText[3]}"
                                   FontSize="16"
                                   Foreground="#DADADA"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Feature 3 -->
                <Border Background="{Binding FeatureBackgroundColor}"
                        CornerRadius="16"
                        Padding="32"
                        Width="300"
                        Margin="12"
                        Effect="{DynamicResource ShadowEffect}">
                    <StackPanel>
                        <TextBlock Text="{Binding FeatureSectionText[4]}"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding FeatureSectionText[5]}"
                                   FontSize="16"
                                   Foreground="#DADADA"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
