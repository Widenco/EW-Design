<UserControl
    x:Class="EWDesign.Components.Views.FooterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EWDesign.Components.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:EWDesign.Components.Models"
    d:DesignHeight="75"
    d:DesignWidth="800"
    MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
    MouseRightButtonDown="UserControl_MouseLeftButtonDown"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <model:FooterComponent />
    </UserControl.DataContext>

    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Click="Edit_Click" Header="Edit" />
            <MenuItem Click="Remove_Click" Header="Remove" />
        </ContextMenu>
    </UserControl.ContextMenu>

    <Border
        Padding="24"
        Background="{Binding Background}"
        Style="{StaticResource SelectedComponent}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel
                x:Name="LogoDropArea"
                Grid.Column="0"
                AllowDrop="True"
                Background="Transparent"
                Drop="FooterDropArea_Drop"
                Orientation="Horizontal" />
            <StackPanel
                x:Name="CopyrightDropArea"
                Grid.Column="1"
                Orientation="Horizontal" />
            <StackPanel
                x:Name="LinksDropArea"
                Grid.Column="2"
                AllowDrop="True"
                Background="Transparent"
                Drop="FooterDropArea_Drop"
                Orientation="Horizontal" />
        </Grid>
    </Border>
</UserControl>
