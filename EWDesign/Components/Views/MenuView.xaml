<UserControl
    x:Class="EWDesign.Components.Views.MenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EWDesign.Components.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="75"
    d:DesignWidth="800"
    MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
    MouseRightButtonDown="UserControl_MouseLeftButtonDown"
    mc:Ignorable="d">

    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Click="Edit_Click" Header="Edit" />
            <MenuItem Click="Remove_Click" Header="Remove" />
        </ContextMenu>
    </UserControl.ContextMenu>
    <Border Style="{StaticResource SelectedComponent}">
        <StackPanel
            x:Name="MenuItemsDropArea"
            MinHeight="20"
            HorizontalAlignment="Right"
            AllowDrop="True"
            Background="Transparent"
            Orientation="Horizontal" />
    </Border>
</UserControl>
