<UserControl
    x:Class="EWDesign.Components.Views.FooterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EWDesign.Components.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:EWDesign.Components.Models"
    d:DesignHeight="300"
    d:DesignWidth="800"
    MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
    MouseRightButtonDown="UserControl_MouseLeftButtonDown"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <model:FooterComponent />
    </UserControl.DataContext>

    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Click="Edit_Click" Header="Edit" />
            <MenuItem Click="Remove_Click" Header="Remove" />
        </ContextMenu>
    </UserControl.ContextMenu>

    <Border Background="{Binding Background}" Style="{StaticResource SelectedComponent}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Contenido principal del footer  -->
            <Grid Grid.Row="0" Margin="40,40,40,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!--  Columna 1: Logo y descripción  -->
                <StackPanel Grid.Column="0" Margin="0,0,40,0">
                    <StackPanel
                        x:Name="LogoDropArea"
                        MinWidth="30"
                        MinHeight="30"
                        AllowDrop="True"
                        Background="Transparent"
                        Drop="FooterDropArea_Drop"
                        Orientation="Vertical" />

                    <StackPanel
                        x:Name="DescriptionDropArea"
                        MinWidth="30"
                        MinHeight="30"
                        Margin="0,16,0,0"
                        AllowDrop="True"
                        Background="Transparent"
                        Drop="FooterDropArea_Drop"
                        Orientation="Vertical" />
                </StackPanel>

                <!--  Columna 2: Enlaces rápidos  -->
                <StackPanel Grid.Column="1" Margin="0,0,20,0">
                    <StackPanel
                        x:Name="LinksTitleDropArea"
                        MinWidth="30"
                        MinHeight="30"
                        Margin="0,0,0,16"
                        AllowDrop="True"
                        Background="Transparent"
                        Drop="FooterDropArea_Drop"
                        Orientation="Vertical" />

                    <StackPanel
                        x:Name="LinksDropArea"
                        MinWidth="30"
                        MinHeight="30"
                        AllowDrop="True"
                        Background="Transparent"
                        Drop="FooterDropArea_Drop"
                        Orientation="Vertical" />
                </StackPanel>

                <!--  Columna 3: Información de contacto  -->
                <StackPanel Grid.Column="2" Margin="0,0,20,0">
                    <StackPanel
                        x:Name="ContactTitleDropArea"
                        MinWidth="30"
                        MinHeight="30"
                        Margin="0,0,0,16"
                        AllowDrop="True"
                        Background="Transparent"
                        Drop="FooterDropArea_Drop"
                        Orientation="Vertical" />

                    <StackPanel
                        x:Name="ContactDropArea"
                        MinWidth="30"
                        MinHeight="30"
                        AllowDrop="True"
                        Background="Transparent"
                        Drop="FooterDropArea_Drop"
                        Orientation="Vertical" />
                </StackPanel>

                <!--  Columna 4: Redes sociales  -->
                <StackPanel Grid.Column="3">
                    <StackPanel
                        x:Name="SocialTitleDropArea"
                        MinWidth="30"
                        MinHeight="30"
                        Margin="0,0,0,16"
                        AllowDrop="True"
                        Background="Transparent"
                        Drop="FooterDropArea_Drop"
                        Orientation="Vertical" />

                    <!--  Iconos de redes sociales  -->
                    <StackPanel
                        x:Name="IconsDropArea"
                        MinWidth="30"
                        MinHeight="30"
                        HorizontalAlignment="Left"
                        AllowDrop="True"
                        Background="Transparent"
                        Drop="IconsDropArea_Drop"
                        Orientation="Horizontal" />


                </StackPanel>
            </Grid>

            <!--  Línea separadora  -->
            <Border
                Grid.Row="1"
                Height="1"
                Margin="40,0,40,20"
                Background="#3a3a4a" />

            <!--  Copyright  -->
            <StackPanel
                x:Name="CopyrightDropArea"
                Grid.Row="2"
                MinWidth="30"
                MinHeight="30"
                Margin="40,0,40,20"
                HorizontalAlignment="Center"
                AllowDrop="True"
                Background="Transparent"
                Drop="FooterDropArea_Drop"
                Orientation="Horizontal" />
        </Grid>
    </Border>
</UserControl>
